{
  "exclude": ["./src/**/.*", "./node_modules/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  }
}
